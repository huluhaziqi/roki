<resources>


    <style name="common_edit">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/c01</item>
        <item name="android:textColor">@color/c05</item>
        <item name="android:layout_height">@dimen/common_edit_height</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/shape_yellow_edit_bg</item>
    </style>


    <style name="user_text_style">
        <item name="android:background">@drawable/shape_user_text_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#232323</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="check_box_style">
        <item name="android:background">@drawable/ic_check_box</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>

    </style>


    <style name="maintain_home_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/maintain_home_enter</item>
        <item name="@android:windowExitAnimation">@anim/maintain_home_exit</item>
    </style>

    <style name="maintain_home_dialog_style" parent="Theme_Dialog_FullScreen">
        <item name="android:windowAnimationStyle">@style/maintain_home_anim</item>
    </style>

    <style name="countdown_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/dialog_bg</item><!--背景透明-->
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="sterilizer_order_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/steri_order_text_selector</item>
    </style>
    <style name="sterilizer_order_time_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:text">小时</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1f1f1f</item>
    </style>
</resources>
