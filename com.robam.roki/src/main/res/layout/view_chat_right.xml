<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/txtSendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2015年06月20日 18:30"
        android:textColor="@color/c16"
        android:textSize="9sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/figureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFigure"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_chat_figure_left" />


            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="ROKI"
                android:textColor="@color/c16"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/figureView"
            android:gravity="right"
            android:text="我们家WIFI连不上！！"
            android:textColor="#6586b1"
            android:textIsSelectable="true"
            android:textSize="13sp" />


    </RelativeLayout>

</LinearLayout>