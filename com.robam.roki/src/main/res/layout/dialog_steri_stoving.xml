<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="烘干模式"
        android:textColor="#a5a5a5"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rl_six"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:background="#d4d4d4"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="60"
            android:textColor="#969696"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_six"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_six"
            android:text="分钟"
            android:textColor="#1f1f1f"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_check_six"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/img_stove_check" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_eight"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:background="#d4d4d4"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="80"
            android:textColor="#969696"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_eight"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_eight"
            android:text="分钟"
            android:textColor="#1f1f1f"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_check_eight"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/img_stove_check"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:text="确认"
        android:textSize="38sp"
        android:textColor="#f8bf40"/>

</LinearLayout>
