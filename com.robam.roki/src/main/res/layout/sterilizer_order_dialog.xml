<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="预约消毒"
        android:textColor="#a5a5a5"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/rl_order_three"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_three"
            style="@style/sterilizer_order_style"
            android:text="3" />

        <TextView
            android:id="@+id/tv_time_three"
            style="@style/sterilizer_order_time_style"
            android:layout_alignBottom="@+id/tv_three"
            android:layout_toRightOf="@+id/tv_three" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_four"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_four"
            style="@style/sterilizer_order_style"
            android:text="4" />

        <TextView
            android:id="@+id/tv_time_four"
            style="@style/sterilizer_order_time_style"
            android:layout_alignBottom="@+id/tv_four"
            android:layout_toRightOf="@+id/tv_four" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_five"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_five"
            style="@style/sterilizer_order_style"
            android:text="5" />

        <TextView
            android:id="@+id/tv_time_five"
            style="@style/sterilizer_order_time_style"
            android:layout_alignBottom="@+id/tv_five"
            android:layout_toRightOf="@+id/tv_five" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_six"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_six"
            style="@style/sterilizer_order_style"
            android:text="6" />

        <TextView
            android:id="@+id/tv_time_six"
            style="@style/sterilizer_order_time_style"
            android:layout_alignBottom="@+id/tv_six"
            android:layout_toRightOf="@+id/tv_six" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_seven"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_seven"
            style="@style/sterilizer_order_style"
            android:text="7" />

        <TextView
            android:id="@+id/tv_time_seven"
            style="@style/sterilizer_order_time_style"
            android:layout_alignBottom="@+id/tv_seven"
            android:layout_toRightOf="@+id/tv_seven" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_order_commit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="确认"
        android:textColor="#e9a60f"
        android:textSize="34sp" />

</LinearLayout>
