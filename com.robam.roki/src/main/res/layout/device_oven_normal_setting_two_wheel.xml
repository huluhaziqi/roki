<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    >

    <LinearLayout
        android:id="@+id/llNormalItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgKind"

            android:layout_width="47dp"
            android:layout_height="43dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/ic_device_oven_chicken_wing_gray" />

        <TextView
            android:id="@+id/txtKind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:text="烤鸡翅"
            android:textColor="#454545"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        >

        <com.robam.roki.ui.view.DeviceNormalSettingTemWheel
            android:id="@+id/wv1"
            style="@style/wheel_view_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:selectedTextSize="36sp"
            app:selectedTextColor="#222222"
             />

        <com.robam.roki.ui.view.DeviceNormalSettingTimeWheel
            android:id="@+id/wv2"
            style="@style/wheel_view_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:selectedTextSize="36sp"
            app:selectedTextColor="#222222" />
    </LinearLayout>


</LinearLayout>