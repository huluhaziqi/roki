<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="595">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="122" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="237"
                android:background="@color/White_90" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgFigure"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="13dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_user_default_figure" />

        <TextView
            android:id="@+id/txtFigure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgFigure"
            android:text="立即登录"
            android:textColor="#232323"
            android:textSize="15sp" />

    </RelativeLayout>


    <ListView
        android:id="@+id/listview"
        style="@style/common_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="358"
        android:background="@color/White_90"
        android:divider="@null"
        android:dividerHeight="2dp" />
</LinearLayout>
