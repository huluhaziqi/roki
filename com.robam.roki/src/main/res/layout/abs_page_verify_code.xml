<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_edit_height"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtPhone"
            style="@style/common_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入手机" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/c01"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="获取验证码"
            android:textColor="@color/c05"
            android:id="@+id/txtGetCode" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtCode"
        style="@style/common_edit"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:hint="请输入验证码" />


    <LinearLayout
        android:id="@+id/divUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="我已阅读并同意"
            android:id="@+id/chkUserProfile" />

        <TextView
            android:id="@+id/txtUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="ROKI用户协议"
            android:textColor="@color/c02"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtConfirm"
        style="@style/common_button"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp" />

</LinearLayout>
