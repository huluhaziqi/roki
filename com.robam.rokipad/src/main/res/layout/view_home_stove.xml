<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_device_control_bg"
    android:padding="1px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/control_bg"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <com.robam.rokipad.ui.view.StoveHeadView
            android:id="@+id/leftHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:isLeft="true" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_stroke" />

        <com.robam.rokipad.ui.view.StoveHeadView
            android:id="@+id/rightHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:isLeft="false" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgLock"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerInParent="true"
        android:background="@drawable/common_view_background_selector"
        android:contentDescription="@null"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:src="@drawable/ic_stove_lock_selector" />

</RelativeLayout>