<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/titlebar_style"
    android:layout_width="match_parent"
    android:background="@color/black_10"
    android:layout_height="?android:actionBarSize">

    <LinearLayout
        android:id="@+id/pnlMiddle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/common_view_background_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12:59"
            android:gravity="center"
            android:textColor="@color/setting_text_normal"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/img_wifi"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_wifi_connection_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFan"
            style="@style/titlebar_icon_style"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_fan_selector" />

        <ImageView
            android:id="@+id/imgStove"
            style="@style/titlebar_icon_style"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_stove_selector" />

        <ImageView
            android:id="@+id/imgStove1"
            style="@style/titlebar_icon_style"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_stove_selector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgStove2"
            style="@style/titlebar_icon_style"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_stove_selector"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pause"
            style="@style/titlebar_icon_style"
            android:contentDescription="@null"
            android:src="@drawable/ic_pause_selector" />

        <ImageView
            android:id="@+id/img_setting"
            style="@style/titlebar_icon_style"
            android:contentDescription="@null"
            android:src="@drawable/ic_home_setting_selector" />

        <ImageView
            android:id="@+id/img_clock"
            style="@style/titlebar_icon_style"
            android:contentDescription="@null"
            android:src="@drawable/ic_clock_selector" />

        <RelativeLayout
            android:id="@+id/layout_count_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/common_view_background_selector"
            android:visibility="gone">

            <ImageView
                style="@style/titlebar_icon_style"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@mipmap/ic_clock_down" />

            <TextView
                android:id="@+id/tvCountdownTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="00:00"
                android:textColor="@color/home_bg"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>