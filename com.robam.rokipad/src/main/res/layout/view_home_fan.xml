<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_device_control_bg"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="1px" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:background="@color/home_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="26dp"
                android:text="Wind"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <com.robam.rokipad.ui.view.FanWindView
                android:id="@+id/fanWind"
                android:scaleType="centerInside"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@mipmap/img_home_fan_oblique"
            android:contentDescription="@null" />
    </LinearLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:stretchColumns="*" >

        <TableRow>

            <com.robam.rokipad.ui.view.FanLevelView
                android:id="@+id/level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.robam.rokipad.ui.view.FanLevelView
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.robam.rokipad.ui.view.FanLevelView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.robam.rokipad.ui.view.FanLevelView
                android:id="@+id/level6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="40dp" >

        <com.robam.rokipad.ui.view.FanLightView
            android:id="@+id/fanLight"
            android:scaleType="centerInside"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>

</LinearLayout>