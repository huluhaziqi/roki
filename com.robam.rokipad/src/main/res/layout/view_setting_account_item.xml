<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/common_view_background_selector"
    android:clickable="true" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="120dp"
        android:background="@color/setting_divide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="62dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/img_user_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_name"/>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/setting_content_text"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="哈哈" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_user_phone"/>

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/setting_content_text"
                    android:layout_marginLeft="5dp"
                    android:text="15811111111" />

                <TextView
                    android:id="@+id/txtLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="127dp"
                    android:textColor="#ffcf67"
                    android:textSize="20sp"
                    android:text="退出登录"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>