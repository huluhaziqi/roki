<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/shape_device_control_bg"
    android:padding="1px" >

    <ImageView
        android:id="@+id/imgAdvert"
         android:background="@drawable/common_view_background_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_home_love_meal_bg" />

    <TextView
        android:id="@+id/txtTitle"
        style="@style/tv_home_advert"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/love_meal" />

</RelativeLayout>