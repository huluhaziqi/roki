<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp" >

    <LinearLayout
        android:id="@+id/pnlLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_wifi_connected"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txtSsid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="ROBAM1"
            android:textColor="@color/setting_text_normal"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_wifi_is_encrypted" />

        <ImageView
            android:id="@+id/imgWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:contentDescription="@null"
            android:layout_marginRight="50dp"
            android:src="@mipmap/ic_wifi" />
    </LinearLayout>

</RelativeLayout>