<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp" >

    <LinearLayout
        android:id="@+id/pnlLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtSsid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ROBAM1"
            android:textColor="@color/setting_text_normal"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_wifi_is_encrypted" />

        <ImageView
            android:id="@+id/imgWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_wifi_connection_selector" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pnlLine"
        android:layout_below="@+id/pnlLine"
        android:layout_marginTop="-5dp"
        android:text="@string/wifi_connected"
        android:textColor="@color/setting_text_pressed"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>