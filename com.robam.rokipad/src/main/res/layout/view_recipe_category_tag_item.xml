<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_category_item_height" >

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="果蔬类"
        android:textColor="@color/setting_text_normal"
        android:textSize="@dimen/recipe_category_item_text_size" />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_setting_selected_flag"
        android:contentDescription="@null" />

    <View
        android:id="@+id/img_divide"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_stroke" />

</RelativeLayout>