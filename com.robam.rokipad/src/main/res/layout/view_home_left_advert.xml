<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="7dp" >

    <com.robam.rokipad.ui.view.HomeAdvertItemView
        android:id="@+id/adLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:imgBackgroud="@mipmap/img_home_love_meal_bg"
        app:title="来吃有爱的饭" />

    <View
        android:layout_width="7dp"
        android:layout_height="match_parent" />

    <com.robam.rokipad.ui.view.HomeAdvertItemView
        android:id="@+id/adMiddle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:imgBackgroud="@mipmap/img_home_today_main_bg"
        app:title="今日主打" />

    <View
        android:layout_width="7dp"
        android:layout_height="match_parent" />

    <com.robam.rokipad.ui.view.HomeAdvertItemView
        android:id="@+id/adRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:imgBackgroud="@mipmap/img_home_today_menu_bg"
        app:title="今日菜谱" />

</LinearLayout>