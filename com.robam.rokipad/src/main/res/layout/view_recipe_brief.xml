<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgRecipeBrief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="312dp"
            android:layout_height="match_parent"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/txtBrief"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:text="     JSON为曲奇达人热捧的老师......原料简单快手曲奇~教你用一份原料做出双卫曲奇。"
                android:lineSpacingExtra="2dp"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="69dp"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/txtDiff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtBrief"
                android:layout_centerHorizontal="true"
                android:text="难度"
                android:textColor="#e9a60f"
                android:textSize="24sp"
                android:layout_marginTop="20dp"/>

            <com.robam.rokipad.ui.view.RecipeDifficultyView
                android:layout_below="@id/txtDiff"
                android:id="@+id/recipeDifficulity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txtStart"
                android:layout_width="264dp"
                android:layout_height="78dp"
                android:layout_alignParentBottom="true"
                android:background="#e9a60f"
                android:text="开始烹饪"
                android:gravity="center"
                android:textSize="32sp"
                android:textColor="#232323"
                android:layout_marginBottom="21dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_login_back" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="177.3dp"
        android:background="@mipmap/img_recipe_name_box"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柠香曲奇"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_recipe_box_line"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="80dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步骤"
                android:textSize="20sp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/txtStepCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="#df1313"
                android:textSize="20sp"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用时"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/txtTimeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30min"
                android:textColor="#df1313"
                android:textSize="20sp"
                android:layout_marginLeft="4dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_recipe_collect_gray"
                android:layout_marginLeft="17dp"/>

            <TextView
                android:id="@+id/txtCollectCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="521"
                android:textSize="20sp"
                android:textColor="#df1313"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
