<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Transparent">

    <RelativeLayout
        android:id="@+id/relMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/titleView"
        android:background="#212121"
        android:paddingLeft="60dp"
        android:paddingRight="42dp">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:shrinkColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llChickenWing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgChickenWing"
                        android:layout_width="85dp"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="0dp"
                        android:src="@mipmap/img_oven_chicken_wing_unworking" />

                    <TextView
                        android:id="@+id/txtChickenWing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="鸡翅"
                        android:textColor="#575757"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingRight="2dp"
                    android:paddingTop="21dp"
                    android:src="@mipmap/ic_device_oven_leanline_gray"></ImageView>

                <LinearLayout
                    android:id="@+id/llCake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgCake"
                        android:layout_width="85dp"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_oven_cake_unworking" />

                    <TextView
                        android:id="@+id/txtCake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="蛋糕"
                        android:textColor="#575757"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingRight="2dp"
                    android:paddingTop="21dp"
                    android:src="@mipmap/ic_device_oven_leanline_gray"></ImageView>

                <LinearLayout
                    android:id="@+id/llBread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgBread"
                        android:layout_width="80dp"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_oven_bread_unworking" />

                    <TextView
                        android:id="@+id/txtBread"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="面包"

                        android:textColor="#575757"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingRight="2dp"
                    android:paddingTop="21dp"
                    android:src="@mipmap/ic_device_oven_leanline_gray"></ImageView>

                <LinearLayout
                    android:id="@+id/llStreakyPork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgStreakyPork"
                        android:layout_width="85dp"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_oven_streaky_pork_unworking" />

                    <TextView
                        android:id="@+id/txtStreakyPork"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="五花肉"
                        android:textColor="#575757"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingRight="2dp"
                    android:paddingTop="21dp"
                    android:src="@mipmap/ic_device_oven_leanline_gray"></ImageView>

                <LinearLayout
                    android:id="@+id/llSteak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSteak"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_oven_steak_unworking" />

                    <TextView
                        android:id="@+id/txtSteak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="牛排"
                        android:textColor="#575757"
                        android:textSize="28sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:id="@+id/llPisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgPisa"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_oven_pisa_unworking" />

                    <TextView
                        android:id="@+id/txtPisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="披萨"
                        android:textColor="#575757"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingRight="2dp"
                    android:paddingTop="21dp"
                    android:src="@mipmap/ic_device_oven_leanline_gray"></ImageView>

                <LinearLayout
                    android:id="@+id/llSeafood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSeafood"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_oven_seafood_unworking" />

                    <TextView
                        android:id="@+id/txtSeafood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="海鲜"
                        android:textColor="#575757"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingRight="2dp"
                    android:paddingTop="21dp"
                    android:src="@mipmap/ic_device_oven_leanline_gray"></ImageView>

                <LinearLayout
                    android:id="@+id/llCookie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgCookie"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_oven_cookie_unworking" />

                    <TextView
                        android:id="@+id/txtCookie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="饼干"
                        android:textColor="#575757"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingRight="2dp"
                    android:paddingTop="21dp"
                    android:src="@mipmap/ic_device_oven_leanline_gray"></ImageView>

                <LinearLayout
                    android:id="@+id/llVegetable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgVegetable"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_oven_vegetable_unworking" />

                    <TextView
                        android:id="@+id/txtVegetable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="蔬菜"
                        android:textColor="#575757"
                        android:textSize="25sp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/llProMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tableLayout"
            android:layout_marginLeft="380dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProMode"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:src="@mipmap/img_oven_pro_mode_unworking" />

            <TextView
                android:id="@+id/txtProMode"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgProMode"
                android:gravity="center_horizontal"
                android:text="专业模式"
                android:textColor="#575757"
                android:textSize="23sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlSelfClean"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="32dp"
            android:background="@mipmap/img_oven_circle_unworking"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtSelfClean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自洁"
                android:textColor="#575757"
                android:textSize="36sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relSwitch"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="32dp">


            <TextView
                android:id="@+id/txtSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="已关闭"
                android:textColor="#ffffff"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/imgSwitch"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/txtSwitch"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_device_oven_start_button_white" />

            <ImageView
                android:id="@+id/imgSwitchLine"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:paddingRight="25dp"
                android:src="@mipmap/ic_device_oven_leanline_white" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlNoticeStart"
            android:layout_width="450dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="0.7"
            android:background="#000000"
            android:gravity="center"
            android:visibility="gone"

            >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="请点击右下方电源键"
                android:textColor="#e9a60f"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/txt1"
                android:paddingLeft="5dp"
                android:src="@mipmap/ic_device_oven_start_button_yellow" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/txt1"
                android:layout_below="@id/txt1"
                android:layout_marginTop="8dp"
                android:text="开启烤箱"
                android:textColor="#e9a60f"
                android:textSize="36sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
